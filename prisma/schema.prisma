generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Pessoa {
  id_pessoa          String   @id @map("_id") @default(auto()) @db.ObjectId // Chave primária usando ObjectId do MongoDB
  nome               String   // Nome
  email              String   @unique // Email único
  telefone           String   // Telefone
  cpf_cnpj           String   @unique // CPF ou CNPJ único
  rg                 String?  // RG opcional
  genero             String?  // Gênero ('M', 'F', 'O')
  idade              Int?     // Idade opcional
  tipo_pessoa        String   @default("F") // Tipo de pessoa ('F', 'J')
  razao_social       String?  // Nome oficial opcional
  nome_fantasia      String?  // Nome usual opcional
  inscricao_estadual String?  // Registro estadual opcional
  data_fundacao      DateTime? // Data de fundação opcional
  setor_atividade    String?  // Setor de atuação opcional
}

// Definição dos ENUMs
enum genero {
  M
  F
  O
}

enum tipo_pessoa {
  F
  J
}
